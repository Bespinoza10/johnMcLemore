<div class="container">
  <div class="row content-space">
    <div class="col-md-8 center-block content-space">
      <h1 style="text-align:center;"><%= @post.title %></h1>
      <%= simple_format @post.content, class: "blog-p" %>
    </div>
  </div>
</div>
<br>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>